---
interface Project {
    type: 'FRONTEND' | 'BACKEND' | 'FULL STACK';
    title: string;
    description: string;
    image: string;
    tags: string[];
    links: {
        code: string;
        demo?: string;
    };
}

const projects: Project[] = [
    {
        type: 'FRONTEND',
        title: 'Portfolio Personal',
        description: 'Portfolio personal construido con React, TypeScript y Tailwind CSS.',
        image: '/projects/portfolio.webp',
        tags: ['HTML5', 'CSS3', 'JavaScript', 'React', 'Git', 'Tailwind'],
        links: {
            code: '#',
            demo: '#'
        }
    },
    {
        type: 'FULL STACK',
        title: 'Task Manager',
        description: 'Aplicación web full stack para gestión de tareas y proyectos.',
        image: '/projects/task-manager.webp',
        tags: ['HTML5', 'CSS3', 'JavaScript', 'React', 'C#', '.NET'],
        links: {
            code: '#',
            demo: '#'
        }
    },
    {
        type: 'BACKEND',
        title: '.NET API Backend',
        description: 'API Rest Backend con C# .NET, Entity Framework y SQL Server.',
        image: '/projects/dotnet-backend.webp',
        tags: ['C#', '.NET', 'Entity Framework', 'SQL Server'],
        links: {
            code: '#'
        }
    }
];

const filters = ['Todos', 'Full Stack', 'Frontend', 'Backend'];
---
<section id="proyectos" class="bg-[#151817] min-h-screen py-32">
    <div class="container mx-auto px-6">
        <span class="text-[#94D8F6] text-sm tracking-wider">PROYECTOS</span>
        <h2 class="text-5xl font-bold mt-2 mb-12 text-white">Mis proyectos destacados</h2>
        
        <div class="flex gap-4 mb-12">
            {
                filters.map(filter => (
                    <button class="px-6 py-2 rounded-full bg-black/20 backdrop-blur-sm hover:bg-[#94D8F6]/20 transition-colors hover:cursor-pointer text-sm font-medium">
                        {filter}
                    </button>
                ))
            }
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {
                projects.map(({ type, title, description, tags, links, image }) => (
                    <article class="group bg-black/20 backdrop-blur-sm rounded-xl overflow-hidden hover:bg-[#94D8F6]/5 transition-colors">
                        <img src={image} alt={title} class="w-full h-48 object-cover" />
                        <div class="p-6">
                            <header class="mb-4">
                                <span class="text-[#94D8F6] text-sm tracking-wider uppercase">{type}</span>
                                <h3 class="text-2xl font-bold mt-1">{title}</h3>
                            </header>
                            <p class="text-gray-400 mb-4">
                                {description}
                            </p>
                            <div class="flex flex-wrap gap-2 mb-4">
                                {tags.map(tag => (
                                    <span class="px-3 py-1 text-xs rounded-full bg-black/20 backdrop-blur-sm hover:bg-[#94D8F6]/20 transition-colors">{tag}</span>
                                ))}
                            </div>
                            <footer class="flex gap-3">
                                <a href={links.code} class="flex items-center gap-2 bg-black/20 backdrop-blur-sm hover:bg-[#94D8F6]/20 transition-colors px-4 py-2 rounded-full text-sm">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-code" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M7 8l-4 4l4 4"></path>
                                        <path d="M17 8l4 4l-4 4"></path>
                                        <path d="M14 4l-4 16"></path>
                                    </svg>
                                    Código
                                </a>
                                {links.demo && (
                                    <a href={links.demo} class="flex items-center gap-2 bg-[#94D8F6]/10 hover:bg-[#94D8F6]/20 text-[#94D8F6] transition-colors px-4 py-2 rounded-full text-sm">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-external-link" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M12 6h-6a2 2 0 0 0 -2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-6"></path>
                                            <path d="M11 13l9 -9"></path>
                                            <path d="M15 4h5v5"></path>
                                        </svg>
                                        Demo
                                    </a>
                                )}
                            </footer>
                        </div>
                    </article>
                ))
            }
        </div>
    </div>
</section>
