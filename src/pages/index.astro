---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Mi Portfolio Personal">
	<Header />
	
	<main class="container mx-auto px-6 pt-24">
		<section id="inicio" class="min-h-screen flex items-center">
			<div>
				<h1 class="text-4xl font-bold mb-4">
					<span class="text-accent">~/</span>portfolio
				</h1>
				<p class="text-lg text-gray-300">
					Desarrollador Full Stack apasionado por crear experiencias web excepcionales
				</p>
			</div>
		</section>

		<section id="proyectos" class="min-h-screen py-16">
			<h2 class="text-3xl font-bold mb-8">Proyectos</h2>
			<!-- Contenido de proyectos se agregará después -->
		</section>

		<section id="sobre-mi" class="min-h-screen py-16">
			<h2 class="text-3xl font-bold mb-8">Sobre mí</h2>
			<!-- Contenido sobre mí se agregará después -->
		</section>

		<section id="certificaciones" class="min-h-screen py-16">
			<h2 class="text-3xl font-bold mb-8">Certificaciones</h2>
			<!-- Contenido de certificaciones se agregará después -->
		</section>

		<section id="skills" class="min-h-screen py-16">
			<h2 class="text-3xl font-bold mb-8">Skills</h2>
			<!-- Contenido de skills se agregará después -->
		</section>
	</main>
</Layout>
