---
import { Image } from 'astro:assets';
import BrayanImg from '../assets/Brayan.jpg';
---
<header class="fixed w-full z-50 top-0 px-8 py-4 flex items-center justify-between bg-black/5 backdrop-blur-md border-b border-white/5">
	<h1 class="text-2xl font-bold flex items-center gap-3">
		<div class="relative">
			<Image
				src={BrayanImg}
				alt="Brayan Ruiz"
				class="w-10 h-10 rounded-full object-cover border-2 border-[#94D8F6] hover:border-white transition-colors"
			/>
			<div class="absolute inset-0 rounded-full border-2 border-[#94D8F6] opacity-50 animate-ping"></div>
		</div>
		<div class="flex flex-col">
			<div class="flex items-center gap-2">
				<span class="text-white">Brayan</span>
				<span class="text-white">Ruiz</span>
			</div>
			<span class="text-xs text-[#94D8F6]">Software Developer</span>
		</div>
	</h1>

	<nav>
		<ul class="flex gap-6 text-sm font-medium">
			<li><a href="#inicio" class="hover:text-[#94D8F6] transition-colors">Inicio</a></li>
			<li><a href="#proyectos" class="hover:text-[#94D8F6] transition-colors">Proyectos</a></li>
			<li><a href="#sobre-mi" class="hover:text-[#94D8F6] transition-colors">Sobre m√≠</a></li>
			<li><a href="#certificaciones" class="hover:text-[#94D8F6] transition-colors">Certificaciones</a></li>
			<li><a href="#skills" class="hover:text-[#94D8F6] transition-colors">Skills</a></li>
		</ul>
	</nav>
</header>

<script>
	document.querySelectorAll('a').forEach(link => {
		link.addEventListener('click', (e) => {
			e.preventDefault();
			const href = link.getAttribute('href');
			if (href) {
				document.querySelector(href)?.scrollIntoView({
					behavior: 'smooth'
				});
			}
		});
	});
</script>
