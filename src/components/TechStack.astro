---
const technologies = {
    "Lenguajes": [
        { name: "JavaScript", icon: "☕" },
        { name: "TypeScript", icon: "📘" },
        { name: "Python", icon: "🐍" },
        { name: "HTML/CSS", icon: "🎨" }
    ],
    "Frameworks": [
        { name: "React", icon: "⚛️" },
        { name: "Astro", icon: "🚀" },
        { name: "Node.js", icon: "💚" },
        { name: "TailwindCSS", icon: "🎯" }
    ],
    "Herramientas": [
        { name: "Git", icon: "📦" },
        { name: "VS Code", icon: "📝" },
        { name: "Docker", icon: "🐳" },
        { name: "GitHub", icon: "🐱" }
    ]
};
---

<section class="mb-12">
    <h2 class="text-2xl font-bold mb-6">
        <span class="text-accent">## </span>Tecnologías
    </h2>
    
    {Object.entries(technologies).map(([category, items]) => (
        <div class="mb-8">
            <h3 class="text-xl font-semibold mb-4 text-gray-200">
                {category}
            </h3>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                {items.map((tech) => (
                    <div class="bg-secondary p-4 rounded-lg">
                        <span class="text-2xl mb-2 block">{tech.icon}</span>
                        <span class="text-gray-300">{tech.name}</span>
                    </div>
                ))}
            </div>
        </div>
    ))}
</section>
